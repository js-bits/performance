{
  "name": "@js-bits/performance",
  "version": "0.1.2",
  "description": "Cross-environment (nodejs/web) performance object",
  "keywords": [
    "javascript",
    "performance",
    "now",
    "time",
    "timestamp",
    "web",
    "node",
    "browser"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./index.js",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "default": "./index.js"
    }
  },
  "browser": {
    "perf_hooks": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/js-bits/performance"
  },
  "author": "https://github.com/apolo-gh",
  "license": "ISC",
  "engines": {
    "node": ">=12"
  },
  "prettier": "@js-bits/formalinter/.prettierrc.json",
  "eslintConfig": {
    "extends": "@js-bits/eslint-config/.eslintrc.json"
  },
  "scripts": {
    "build": "rollup ./index.js --format cjs --file dist/index.cjs --exports default",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "test-cjs": "jest --verbose",
    "test-coverage": "yarn test --coverage",
    "test-watch": "yarn test --watch",
    "lint": "eslint '**/*.{js,jsx}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@js-bits/formalinter": "^1.0.3",
    "@types/jest": "^26.0.22",
    "husky": "^8.0.3",
    "jest": "^27.0.6",
    "rollup": "^3.23.1"
  },
  "jest": {
    "projects": [
      {
        "displayName": "node",
        "testEnvironment": "node"
      },
      {
        "displayName": "jsdom",
        "testEnvironment": "jsdom"
      }
    ]
  }
}
